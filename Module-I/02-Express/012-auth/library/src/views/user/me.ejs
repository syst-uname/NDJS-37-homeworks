<%- include('../port/layout-start', { title: title, user: user, count: count }) %>

<%- include('./user-fields-start') %>

<div class="card-content">

  <span class="card-title"><%= title %></span>
  <br>

  <%- include('./user-field-username', { value: user.username, disabled: 'disabled' }) %>
  <%- include('./user-field-fullname', { value: user.fullname, disabled: 'disabled' }) %>
  <%- include('./user-field-email', { value: user.email, disabled: 'disabled' }) %>
  <%- include('./user-field-created', { value: new Date(user.created).toLocaleString(), disabled: 'disabled' }) %>

</div>

<div class="card-action">
  <a href="/view/user/logout" class="red-text">Выйти</a>
</div>

<%- include('./user-fields-end') %>

<%- include('../port/layout-end', { toast: toast }) %>